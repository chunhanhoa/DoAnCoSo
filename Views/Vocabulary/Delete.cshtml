@model TiengAnh.Models.VocabularyModel

@{
    ViewData["Title"] = "Xóa từ vựng";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3><i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa từ vựng</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <p>Bạn có chắc chắn muốn xóa từ vựng này? Hành động này không thể hoàn tác.</p>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.Image_TV))
                            {
                                <img src="@Model.Image_TV" alt="@Model.Word_TV" class="img-fluid rounded mb-3" style="max-height: 150px;" />
                            }
                            else
                            {
                                <div class="text-center p-4 bg-light rounded mb-3">
                                    <i class="fas fa-image fa-4x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h4 class="card-title text-primary">@Model.Word_TV</h4>
                            <p class="card-text"><strong>Nghĩa:</strong> @Model.Meaning_TV</p>
                            <p class="card-text"><strong>Cấp độ:</strong> @Model.Level_TV</p>
                            <p class="card-text"><strong>ID:</strong> @Model.ID_TV</p>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID_TV" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.ID_TV" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Xóa từ vựng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
