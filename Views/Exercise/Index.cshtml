@model List<TopicModel>
@{
    ViewData["Title"] = "Bài tập";
}

<!-- Hero Section -->
<section class="hero-section" style="padding: 3rem 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-7 fade-in-left">
                <h1 class="animate__animated animate__fadeInUp">Luyện tập tiếng Anh</h1>
                <p class="animate__animated animate__fadeInUp animate__delay-1s">
                    Thực hành và kiểm tra kiến thức của bạn với các bài tập đa dạng, từ trắc nghiệm đơn giản 
    using TiengAnh.Models;
#line default
            </p>
            </div>
            <div class="col-md-5 text-center fade-in-right">
                <img src="~/images/exercise-hero.png" alt="Exercise Learning" class="hero-image animate__animated animate__bounceIn animate__delay-1s" style="max-height: 250px;" />
            </div>
        </div>
    </div>
</section>

<!-- Exercise Categories -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Danh mục bài tập</h2>
            <p class="lead">Chọn một chủ đề để bắt đầu luyện tập</p>
        </div>

        <div class="row g-4">
            @foreach (var topic in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle bg-primary-soft d-inline-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                    <img src="@topic.IconPath" alt="@topic.Name_CD" width="30" height="30">
                                </div>
                                <h3 class="card-title mb-0 fw-bold">@topic.Name_CD</h3>
                            </div>
                            <p class="card-text mb-4">@topic.Description_CD</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge badge-primary">@topic.WordCount bài tập</span>
                                <a href="@Url.Action("Topic", "Exercise", new { id = topic.ID_CD })" class="btn btn-primary">
                                    Làm bài
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Exercise Types -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Các loại bài tập</h2>
            <p class="lead">EngMate cung cấp nhiều loại bài tập đa dạng phù hợp với nhiều trình độ</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="rounded-circle bg-primary-soft d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-tasks text-primary fa-2x"></i>
                        </div>
                        <h4 class="card-title">Trắc nghiệm</h4>
                        <p class="card-text">Kiểm tra kiến thức với các câu hỏi trắc nghiệm đơn giản. Phù hợp cho người mới bắt đầu.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="rounded-circle bg-primary-soft d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-puzzle-piece text-primary fa-2x"></i>
                        </div>
                        <h4 class="card-title">Điền từ</h4>
                        <p class="card-text">Hoàn thành câu bằng cách điền từ thích hợp. Giúp cải thiện từ vựng và ngữ pháp.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="rounded-circle bg-primary-soft d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-sort text-primary fa-2x"></i>
                        </div>
                        <h4 class="card-title">Sắp xếp câu</h4>
                        <p class="card-text">Sắp xếp các từ để tạo thành câu có nghĩa. Luyện tập cấu trúc ngữ pháp và từ vựng.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Activity -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Hoạt động gần đây</h2>
            <p class="lead">Xem lại các bài tập bạn đã thực hiện gần đây</p>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Bài tập</th>
                                <th>Chủ đề</th>
                                <th>Điểm số</th>
                                <th>Thời gian</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Trắc nghiệm từ vựng động vật</td>
                                <td><span class="badge badge-primary">Animals</span></td>
                                <td><span class="badge bg-success">8/10</span></td>
                                <td>Hôm nay, 09:45</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Làm lại</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Điền từ về chủ đề gia đình</td>
                                <td><span class="badge badge-primary">Family</span></td>
                                <td><span class="badge bg-warning">6/10</span></td>
                                <td>Hôm qua, 17:30</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Làm lại</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Trắc nghiệm thì hiện tại đơn</td>
                                <td><span class="badge badge-primary">Grammar</span></td>
                                <td><span class="badge bg-success">9/10</span></td>
                                <td>10/04/2024, 14:15</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Làm lại</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Exercise Tips -->
<section class="py-5 bg-primary text-white text-center">
    <div class="container">
        <h2 class="display-5 fw-bold mb-4">Mẹo làm bài tập hiệu quả</h2>
        <p class="lead mb-5">Để đạt kết quả tốt nhất khi làm bài tập</p>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="p-4 bg-white bg-opacity-10 rounded-3 h-100">
                    <i class="fas fa-clock fa-3x mb-3 text-warning"></i>
                    <h4 class="mb-3">Thực hành đều đặn</h4>
                    <p class="mb-0">Dành ít nhất 15-20 phút mỗi ngày để làm bài tập. Sự đều đặn sẽ mang lại hiệu quả cao.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 bg-white bg-opacity-10 rounded-3 h-100">
                    <i class="fas fa-search fa-3x mb-3 text-warning"></i>
                    <h4 class="mb-3">Xem lại lỗi sai</h4>
                    <p class="mb-0">Đừng bỏ qua lỗi sai. Hãy xem lại và hiểu rõ lý do bạn mắc lỗi để tránh lặp lại.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 bg-white bg-opacity-10 rounded-3 h-100">
                    <i class="fas fa-level-up-alt fa-3x mb-3 text-warning"></i>
                    <h4 class="mb-3">Tăng dần độ khó</h4>
                    <p class="mb-0">Bắt đầu với các bài tập dễ và tăng dần độ khó. Điều này giúp xây dựng sự tự tin và kiến thức.</p>
                </div>
            </div>
        </div>
    </div>
</section>
