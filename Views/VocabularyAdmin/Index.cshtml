@model List<TopicModel>
@{
    ViewData["Title"] = "Quản lý từ vựng";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Quản lý từ vựng</li>
                </ol>
            </nav>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold mb-0">Quản lý chủ đề từ vựng</h3>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Tên chủ đề</th>
                            <th>Mô tả</th>
                            <th>Trình độ</th>
                            <th>Số từ vựng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var topic in Model)
                        {
                            <tr>
                                <td>@topic.ID_CD</td>
                                <td>@topic.Name_CD</td>
                                <td>@topic.Description_CD</td>
                                <td><span class="badge bg-primary">@topic.Level</span></td>
                                <td>@topic.WordCount</td>
                                <td>
                                    <a href="@Url.Action("ManageTopic", "VocabularyAdmin", new { id = topic.ID_CD })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Quản lý từ vựng
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
