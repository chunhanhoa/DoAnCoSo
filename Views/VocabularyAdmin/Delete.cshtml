@model VocabularyModel
@{
    ViewData["Title"] = "Xóa từ vựng";
    var topic = ViewBag.Topic as TopicModel;
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "VocabularyAdmin")">Quản lý từ vựng</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("ManageTopic", "VocabularyAdmin", new { id = topic?.ID_CD })">@(topic?.Name_CD ?? "Chủ đề")</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa từ vựng</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="alert alert-danger mb-4">
                <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> Xác nhận xóa</h4>
                <p class="mb-0">Bạn có chắc chắn muốn xóa từ vựng này? Hành động này không thể hoàn tác.</p>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-3">
                        <img src="@Model.Image_TV" alt="@Model.Word_TV" class="card-img-top" 
                             style="max-height: 200px; object-fit: cover;"
                             onerror="this.src='/images/vocabulary/default.jpg';this.onerror='';">
                        <div class="card-body text-center">
                            <h4 class="card-title mb-1">@Model.Word_TV</h4>
                            <p class="text-muted">@Model.Meaning_TV</p>
                            <button type="button" class="btn btn-sm btn-outline-primary audio-btn" data-audio="@Model.Audio_TV">
                                <i class="fas fa-volume-up me-1"></i> Phát âm
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th class="table-light">ID</th>
                                <td>@Model.ID_TV</td>
                            </tr>
                            <tr>
                                <th class="table-light">Từ vựng</th>
                                <td>@Model.Word_TV</td>
                            </tr>
                            <tr>
                                <th class="table-light">Nghĩa</th>
                                <td>@Model.Meaning_TV</td>
                            </tr>
                            <tr>
                                <th class="table-light">Ví dụ</th>
                                <td>@Model.Example_TV</td>
                            </tr>
                            <tr>
                                <th class="table-light">Chủ đề</th>
                                <td>@Model.TopicName</td>
                            </tr>
                            <tr>
                                <th class="table-light">Trình độ</th>
                                <td>@Model.Level_TV</td>
                            </tr>
                            <tr>
                                <th class="table-light">Loại từ</th>
                                <td>@Model.PartOfSpeech (@Model.ID_LT)</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            
            <form asp-action="Delete" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ID_TV" />
                
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("ManageTopic", "VocabularyAdmin", new { id = Model.ID_CD })" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle audio playback
            document.querySelectorAll('.audio-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const audioPath = this.getAttribute('data-audio');
                    if (audioPath) {
                        const audio = new Audio(audioPath);
                        audio.play();
                    }
                });
            });
        });
    </script>
}
