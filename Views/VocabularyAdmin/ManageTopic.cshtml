@model List<VocabularyModel>
@{
    ViewData["Title"] = "Quản lý từ vựng - " + ViewBag.Topic?.Name_CD;
    var topic = ViewBag.Topic as TopicModel;
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "VocabularyAdmin")">Quản lý từ vựng</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@(topic?.Name_CD ?? "Chủ đề")</li>
                </ol>
            </nav>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3 class="fw-bold mb-0">Từ vựng chủ đề: @topic?.Name_CD</h3>
                    <p class="text-muted mb-0">Tổng số từ vựng: @Model.Count</p>
                </div>
                <a href="@Url.Action("Create", "VocabularyAdmin", new { topicId = topic?.ID_CD })" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i> Thêm từ vựng mới
                </a>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="vocabularyTable">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Từ vựng</th>
                            <th>Nghĩa</th>
                            <th>Ví dụ</th>
                            <th>Trình độ</th>
                            <th>Loại từ</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vocab in Model)
                        {
                            <tr>
                                <td>@vocab.ID_TV</td>
                                <td>
                                    <div>
                                        <strong>@vocab.Word_TV</strong>
                                    </div>
                                </td>
                                <td>@vocab.Meaning_TV</td>
                                <td>@(vocab.Example_TV?.Length > 50 ? vocab.Example_TV.Substring(0, 47) + "..." : vocab.Example_TV)</td>
                                <td><span class="badge bg-primary">@vocab.Level_TV</span></td>
                                <td>@vocab.PartOfSpeech</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Edit", "VocabularyAdmin", new { id = vocab.ID_TV })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a href="@Url.Action("Delete", "VocabularyAdmin", new { id = vocab.ID_TV })" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add DataTable for better user experience with search and pagination
            $('#vocabularyTable').DataTable({
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ từ vựng",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ từ vựng",
                    infoEmpty: "Hiển thị 0 đến 0 của 0 từ vựng",
                    infoFiltered: "(lọc từ _MAX_ từ vựng)",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "Tiếp",
                        previous: "Trước"
                    }
                },
                pageLength: 20, // Set 20 items per page as requested
                lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "Tất cả"]]
            });
        });
    </script>
}
