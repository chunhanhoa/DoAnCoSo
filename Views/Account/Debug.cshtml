@model UserModel
@{
    ViewData["Title"] = "Debug thông tin người dùng";
}

<div class="container mt-5">
    <h2>Debug thông tin người dùng</h2>
    
    <div class="card mb-4">
        <div class="card-header">
            <h3>Thông tin cơ bản</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">UserId:</dt>
                <dd class="col-sm-9">@Model.UserId</dd>
                
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">Username:</dt>
                <dd class="col-sm-9">@Model.Username</dd>
                
                <dt class="col-sm-3">UserName:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>
                
                <dt class="col-sm-3">FullName:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>
                
                <dt class="col-sm-3">Avatar:</dt>
                <dd class="col-sm-9">
                    @Model.Avatar
                    <br />
                    <img src="@Model.Avatar" alt="Avatar" class="img-thumbnail mt-2" style="max-width: 200px;">
                </dd>
            </dl>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h3>Thông tin chi tiết</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Giới tính:</dt>
                <dd class="col-sm-9">@Model.Gender</dd>
                
                <dt class="col-sm-3">Ngày sinh:</dt>
                <dd class="col-sm-9">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Chưa có")</dd>
                
                <dt class="col-sm-3">Số điện thoại:</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
                
                <dt class="col-sm-3">Địa chỉ:</dt>
                <dd class="col-sm-9">@Model.Address</dd>
                
                <dt class="col-sm-3">Giới thiệu:</dt>
                <dd class="col-sm-9">@Model.Bio</dd>
                
                <dt class="col-sm-3">Trình độ:</dt>
                <dd class="col-sm-9">@Model.Level</dd>
                
                <dt class="col-sm-3">Điểm:</dt>
                <dd class="col-sm-9">@Model.Points</dd>
                
                <dt class="col-sm-3">Vai trò:</dt>
                <dd class="col-sm-9">@Model.Role</dd>
                
                <dt class="col-sm-3">Ngày đăng ký:</dt>
                <dd class="col-sm-9">@Model.RegisterDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                
                <dt class="col-sm-3">Lần đăng nhập cuối:</dt>
                <dd class="col-sm-9">@(Model.LastLogin?.ToString("dd/MM/yyyy HH:mm:ss") ?? "Chưa có")</dd>
            </dl>
        </div>
    </div>
    
    <div class="my-4">
        <a href="@Url.Action("Profile")" class="btn btn-primary">Về trang hồ sơ</a>
    </div>
</div>
