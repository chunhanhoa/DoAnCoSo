@using TiengAnh
@using TiengAnh.Models
@using System.Security.Claims
@using TiengAnh.Extensions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@functions {
    public static string GetPartOfSpeechName(string partOfSpeech)
    {
        if (string.IsNullOrEmpty(partOfSpeech))
            return "Không xác định";
            
        switch (partOfSpeech.ToLower())
        {
            case "noun":
            case "n":
                return "Danh từ";
            case "verb":
            case "v":
                return "Động từ";
            case "adjective":
            case "adj":
                return "Tính từ";
            case "adverb":
            case "adv":
                return "Trạng từ";
            case "pronoun":
            case "pron":
                return "Đại từ";
            case "preposition":
            case "prep":
                return "Giới từ";
            case "conjunction":
            case "conj":
                return "Liên từ";
            case "interjection":
            case "interj":
                return "Thán từ";
            default:
                return partOfSpeech;
        }
    }
}
