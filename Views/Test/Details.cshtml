@model TiengAnh.Models.TestModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="position-relative">
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 240px; object-fit: cover;" onerror="this.src='/images/tests/default-test.jpg';this.onerror='';">
                    <div class="position-absolute top-0 end-0 m-3">
                        <span class="badge bg-primary rounded-pill fs-6">@Model.Level</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <h1 class="card-title h2 mb-3">@Model.Title</h1>
                    
                    <div class="mb-4">
                        <span class="badge bg-info me-2">@Model.Category</span>
                        <span class="text-muted">
                            <i class="bi bi-clock me-1"></i> @Model.Duration phút |
                            <i class="bi bi-question-circle me-1"></i> @Model.Questions.Count câu hỏi
                        </span>
                    </div>
                    
                    <p class="card-text fs-5 mb-4">@Model.Description</p>
                    
                    <div class="card mb-4">
                        <div class="card-body bg-light">
                            <h5 class="card-title">Thông tin bài kiểm tra</h5>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><strong>Thời gian:</strong> @Model.Duration phút</li>
                                <li class="mb-2"><strong>Số câu hỏi:</strong> @Model.Questions.Count</li>
                                <li class="mb-2"><strong>Trình độ:</strong> @Model.Level</li>
                                <li class="mb-2"><strong>Loại:</strong> @Model.Category</li>
                                <li><strong>Ngày cập nhật:</strong> @Model.UpdatedAt.ToString("dd/MM/yyyy")</li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        @{
                            string testId = !string.IsNullOrEmpty(Model.TestIdentifier) ? Model.TestIdentifier : 
                                          (!string.IsNullOrEmpty(Model.JsonId) ? Model.JsonId : Model.Id);
                        }
                        
                        <a href="/Test/Take/@testId" class="btn btn-primary btn-lg">
                            <i class="bi bi-play-fill me-2"></i>Bắt đầu làm bài
                        </a>
                        <a href="/Test" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                        
                        <div class="text-center mt-2">
                            <small class="text-muted">Mã bài kiểm tra: @testId</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Log the current test data for debugging
        console.log("Test Details:", @Html.Raw(Json.Serialize(Model)));
    </script>
}