@model IEnumerable<TiengAnh.Models.KiemTra>

@{
    ViewData["Title"] = "Bài kiểm tra";
}

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">Bài kiểm tra tiếng Anh</h1>
    
    <div class="row">
        @foreach (var test in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@test.TitleKt</h5>
                        <p class="card-text">
                            <span class="badge bg-primary">Chủ đề: @test.IdCdNavigation.NameCd</span>
                        </p>
                        <p class="card-text">
                            Bài kiểm tra liên quan đến chủ đề @test.IdCdNavigation.NameCd.
                        </p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@test.IdKt" class="btn btn-outline-primary">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                            <a asp-action="Take" asp-route-id="@test.IdKt" class="btn btn-success">
                                <i class="bi bi-pencil-square"></i> Làm bài
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</div>
