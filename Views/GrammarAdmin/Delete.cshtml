@model GrammarModel
@{
    ViewData["Title"] = "Xóa bài ngữ pháp";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "GrammarAdmin")">Quản lý ngữ pháp</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa bài ngữ pháp</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="alert alert-danger mb-4">
                <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> Xác nhận xóa</h4>
                <p class="mb-0">Bạn có chắc chắn muốn xóa bài ngữ pháp này? Hành động này không thể hoàn tác.</p>
            </div>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title fw-bold">@Model.Title_NP</h4>
                    <div class="d-flex mb-3">
                        <span class="badge bg-primary me-2">@Model.Level</span>
                        <small class="text-muted">Ngày tạo: @(Model.Created?.ToString("dd/MM/yyyy HH:mm") ?? "-")</small>
                    </div>
                    <h5>Nội dung:</h5>
                    <div class="border p-3 mb-3 rounded bg-light">
                        <p>@(Model.Content_NP?.Length > 200 ? Model.Content_NP.Substring(0, 200) + "..." : Model.Content_NP)</p>
                    </div>
                </div>
            </div>
            
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ID_NP" />
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "GrammarAdmin")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
