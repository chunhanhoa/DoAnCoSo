@model List<GrammarModel>
@{
    ViewData["Title"] = "Quản lý ngữ pháp";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Quản lý ngữ pháp</li>
                </ol>
            </nav>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold mb-0">Danh sách bài ngữ pháp</h3>
                <a href="@Url.Action("Create", "GrammarAdmin")" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i> Thêm bài ngữ pháp mới
                </a>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="grammarTable">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Trình độ</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grammar in Model)
                        {
                            <tr>
                                <td>@grammar.ID_NP</td>
                                <td>@grammar.Title_NP</td>
                                <td><span class="badge bg-primary">@grammar.Level</span></td>
                                <td>@(grammar.Created?.ToString("dd/MM/yyyy") ?? grammar.TimeUpload_NP.ToString("dd/MM/yyyy"))</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Edit", "GrammarAdmin", new { id = grammar.ID_NP })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a href="@Url.Action("Delete", "GrammarAdmin", new { id = grammar.ID_NP })" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                        <a href="@Url.Action("Details", "Grammar", new { id = grammar.ID_NP })" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add DataTable for better user experience with search and pagination
            $('#grammarTable').DataTable({
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ bài",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ bài",
                    infoEmpty: "Hiển thị 0 đến 0 của 0 bài",
                    infoFiltered: "(lọc từ _MAX_ bài)",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "Tiếp",
                        previous: "Trước"
                    }
                },
                pageLength: 20,
                lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "Tất cả"]]
            });
        });
    </script>
}
